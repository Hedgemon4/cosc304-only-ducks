<head>
    <link rel="stylesheet" type="text/css" href="/css/editAccount.css">
</head>
<body>
<div class=" container-fluid">
    <h1>Edit Account</h1>
    {{#if message}}
    <div class="alert alert-warning error-message" role="alert">
        {{message}}
    </div>
    {{/if}}
    <form name="updateForm" method=post action="/editAccount/save">
        <div class="row mt-3">
            <div class="form-group col-md-4">
                <label for="firstName">First Name</label>
                <input type="text" name="firstName" class="form-control" id="firstName" placeholder="First name"
                       value="{{customer.firstName}}" maxlength=40 required>
            </div>
            <div class="form-group col-md-4">
                <label for="lastName">Last Name</label>
                <input type="text" name="lastName" class="form-control" id="lastName" placeholder="Last name"
                       value="{{customer.lastName}}" maxlength=40 required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="form-group col-md-4">
                <label for="userName">Username</label>
                <input type="text" name="username" class="form-control" id="userName" placeholder="Username"
                       value="{{customer.userid}}" maxlength=20 required>
            </div>
            <div class="form-group col-md-4">
                <label for="email">Email address</label>
                <input type="email" name="email" class="form-control" id="email" placeholder="Enter email"
                       value="{{customer.email}}" maxlength=50 required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="form-group col-md-4">
                <label for="password">Password</label>
                <input type="password" name="password" class="form-control" id="password" placeholder="Enter password"
                       value="{{customer.password}}" maxlength=30 required>
            </div>
            <div class="form-group col-md-4">
                <label for="phonenum">Phone Number</label>
                <input type="tel" name="phonenum" class="form-control" id="phonenum" placeholder="Enter phone number"
                       value="{{customer.phonenum}}" maxlength=20 required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="form-group col-md-8">
                <label for="address">Address</label>
                <input type="text" name="address" class="form-control" id="address" placeholder="1234 Main Street"
                       value="{{customer.address}}" maxlength=50 required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="form-group col-md-4">
                <label for="city">City</label>
                <input type="text" name="city" class="form-control" id="city" placeholder="City"
                       value="{{customer.city}}" maxlength=40
                       required>
            </div>
            <div class="form-group col-md-4">
                <label for="province">Province</label>
                <select id="province" name="province" class="form-control" required>
                    {{#each provinces}}
                        <option {{selected this ../customer.state}}>{{this}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="row mt-3">
            <div class="form-group col-md-4">
                <label for="postalCode">Postal Code</label>
                <input type="text" name="postalCode" class="form-control" id="postalCode" placeholder="Postal Code"
                       value="{{customer.postalCode}}" maxlength=20 required>
            </div>
            <div class="form-group col-md-4">
                <label for="country">Country</label>
                <select id="country" name="country" class="form-control" required>
                    <option selected>Canada</option>
                </select>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-10 button-group">
                <a href="/customer" class="btn btn-primary button-coloured">Cancel</a>
                <button type="submit" class="btn btn-primary button-coloured">Save</button>
            </div>
        </div>
    </form>
</div>
</body>
