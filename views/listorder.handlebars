<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/listorder.css">
    <title>List Order</title>
</head>
<body>
<h1 class="ordertitle">Order List</h1>
<div class="flex-container">
    <table class="table table-striped table-stuff">
        <thead>
        <tr>
            <th scope="col">Order ID</th>
            <th scope="col">Customer ID</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Total Amount</th>
        </tr>
        </thead>
        <tbody>
        {{#each order}}
            <tr>
                <td>{{this.orderId}}</td>
                <td>{{this.customerId}}</td>
                <td>{{this.firstName}} {{this.lastName}}</td>
                <td>${{displaymoney this.totalAmount}}</td>
            </tr>
            <tr>
                <td colspan="4">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th scope="col">Product ID</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Price</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each (lookup ../products @index)}}
                            <tr>
                                <td>{{this.productId}}</td>
                                <td>{{this.quantity}}</td>
                                <td>${{displaymoney this.price}}</td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
</body>
