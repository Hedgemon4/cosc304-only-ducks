<head>
    <link rel="stylesheet" type="text/css" href="/css/admin.css">
</head>
<body>
<div class="admin-display">
    <h1>OnlyDucks Administrator Panel</h1>
    <h2>Daily Sales Report</h2>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Order Date</th>
            <th scope="col">Total Order Amount</th>
        </tr>
        </thead>
        <tbody>
        {{#each dailySales}}
            <tr>
                <td>{{displayDate this.date}}</td>
                <td>${{displaymoney this.dailyTotal}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    <h2>Sales per product</h2>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Product Name</th>
            <th scope="col">Times Sold</th>
            <th scope="col">Number of Orders</th>
        </tr>
        </thead>
        <tbody>
        {{#each productSales}}
            <tr>
                <td>{{this.productName}}</td>
                <td>{{this.totalQuantity}}</td>
                <td>{{this.numOrders}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
</body>
