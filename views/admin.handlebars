<head>
    <link rel="stylesheet" type="text/css" href="/css/admin.css">
</head>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<body>
<div class="admin-display">
    <h1>OnlyDucks Administrator Panel</h1>
    <h2>Daily Sales Report</h2>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Order Date</th>
            <th scope="col">Total Order Amount</th>
        </tr>
        </thead>
        <tbody>
        {{#each dailySales}}
            <tr>
                <td>{{displayDate this.date}}</td>
                <td>${{displaymoney this.dailyTotal}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    <h2>Graph</h2>
    <div>
        <canvas id="myChart"></canvas>
    </div>
</div>
</body>
<script>
    let label = [];
    let data = [];

        {{#each dailySales}}
        label.push(new Date("{{this.date}}").toLocaleDateString("en-CA"));
        data.push({{displaymoney this.dailyTotal}});
        {{/each}}

    const img = new Image();
    img.src = 'data:image/png;base64,';

    img.onload = () => {
        const ctx = document.getElementById('myChart').getContext('2d');
        const fillPattern = ctx.createPattern(img, 'repeat');

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: label,
                datasets: [{
                    label: 'Amount per order',
                    data: data,
                    borderWidth: 1,
                    backgroundColor: fillPattern
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    };
</script>
