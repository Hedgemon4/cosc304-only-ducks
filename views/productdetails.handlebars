<head>
    <link rel="stylesheet" type="text/css" href="/css/product.css">
</head>
<body>
<div class="product-flex-col">
    {{#if product}}
        {{#each product}}
            <div class="product-flex-row">
                <div class="product-flex-col-half">

                    <div class="product-flex-row"> <h1 class="product-title"><b>{{this.productName}}</b></h1></div>
                    <div class="product-flex-row-text-top"> <h1>About:&nbsp;</h1> <h3 style="margin: 0.75rem 0 0 0"> {{this.productDesc}}</h3></div>
                    <div class="product-flex-row-text"> <h1>Price:&nbsp;</h1> <h3>${{displaymoney this.productPrice}}</h3></div>

                    <div class="product-flex-row-buttons">
                        <a href="/listprod" class="btn button-coloured">Back To Shopping</a>
                        <a href={{getAddToCartLink this.productId this.productName this.productPrice}} class="btn button-coloured">Add to Cart</a>
                    </div>
                </div>
                {{#if this.productImageURL}}
                <img src={{this.productImageURL}} class="large-image">
                {{/if}}
            </div>
        {{/each}}
    {{/if}}
</div>
</body>